<div class="container">
    <h2 class="text-center text-primary">Student Placement Status</h2>

    <!-- Buttons for filtering students -->
    <div class="text-center mb-3">
        <a asp-controller="StudentDetails" asp-action="StudentStatusList" class="btn btn-primary">All Students</a>
        <a asp-controller="StudentDetails" asp-action="PlacedStudentList" class="btn btn-success">Placed Students</a>
        <a asp-controller="StudentDetails" asp-action="NotPlacedStudentList" class="btn btn-warning">Not Placed Students</a>
    </div>

    <div class="student-card-container">
        @foreach (var student in Model)
        {
            <div class="student-card">
                <img src="@(string.IsNullOrEmpty(student.Image) ? "https://via.placeholder.com/100" : $"http://localhost:5075/api/StudentDetails/GetImage/Image/{System.IO.Path.GetFileName(student.Image)}")"
                     alt="Student Photo" class="student-photo">
                <h4 class="student-name">@student.StudentName</h4>
                <p class="student-enrollment">Enrollment No: @student.Enrollment_No</p>
                <span class="badge @(student.Status == "Placed" ? "bg-success" : "bg-warning")">
                    @student.Status
                </span>
            </div>
        }
    </div>
</div>

<style>
    .student-card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    .student-card {
        width: 250px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        padding: 20px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .student-photo {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #007bff;
        margin-bottom: 15px;
    }

    .student-name {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .student-enrollment {
        font-size: 14px;
        color: #555;
        margin-bottom: 10px;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 5px;
        color: white;
        font-weight: bold;
    }

    .bg-success {
        background-color: #28a745;
    }

    .bg-warning {
        background-color: #ffc107;
        color: black;
    }
</style>