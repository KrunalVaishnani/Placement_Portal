<div class="container">
    <h2 class="text-center text-primary">Company List</h2>
    <div class="company-card-container">
        @foreach (var company in Model)
        {
            <div class="company-card">
                <img src="@(string.IsNullOrEmpty(company.Image) ? "https://via.placeholder.com/150" : $"http://localhost:5075/api/Company/GetCompanyImage/Image/{company.Image}")"
                     alt="Company Logo" class="company-logo">
                <h4 style="padding-top:10px" class="company-name">@company.CompanyName</h4>
                <p class="company-contact">📞 @company.Contact_No</p>
                <p class="company-email">✉ @company.Email</p>
                <p class="company-address">📍 @company.Address</p>
                <p class="company-pincode">🏷 Pincode: @company.Pincode</p>
            </div>
        }
    </div>
</div>

<style>
    .company-card-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr); /* 4 cards per row */
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    .company-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        padding: 20px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: transform 0.3s ease-in-out;
    }

    .company-card:hover {
        transform: scale(1.05);
    }

    .company-logo {
        width: 180px; /* Adjust size */
        height: 90px; /* Maintain square shape */
        object-fit: contain; /* Ensures full image is visible */
        border: 4px solid #007bff;
        border-radius: 10px; /* Circular shape */
        padding: 5px; /* Adds spacing inside the border */
        background: white;
    }


    .company-name {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .company-contact, .company-email, .company-address, .company-pincode {
        font-size: 14px;
        color: #555;
        margin-bottom: 5px;
    }

    /* Responsive Design */
    media (max-width: 1200px) {
        .company-card-container {
            grid-template-columns: repeat(3, 1fr); /* 3 cards per row */
        }
    }

    media (max-width: 900px) {
        .company-card-container {
            grid-template-columns: repeat(2, 1fr); /* 2 cards per row */
        }
    }

    media (max-width: 600px) {
        .company-card-container {
            grid-template-columns: repeat(1, 1fr); /* 1 card per row */
        }
    }
</style>
