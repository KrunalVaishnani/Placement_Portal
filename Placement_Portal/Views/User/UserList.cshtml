@model IEnumerable<UserModel>;

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #ddd;
    }
</style>

<div class="text-center">
    <h2><b>User List</b></h2>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row mb-3">
    <div class="col-sm-10">
        <a asp-controller="User" asp-action="CreateUser" class="btn btn-primary">Add User</a>
    </div>
</div>

<table>
    <thead>
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Contact No</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Contact_No</td>
                <td>@user.Gender</td>
                <td>@user.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.UserID" class="btn btn-success">Edit</a>
                    <form asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.UserID" method="post" style="display:inline-block;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
